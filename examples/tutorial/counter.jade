.counter
  .val Counter: #{count}
  .controls
    button.decr(on={click: $helpers.decr}) -
    button.incr(on={click: $helpers.incr}) +
  a(attrs={href: '#about'}) About
  if count > 0
    .boxes
      each box in Array(count)
        .box(style={
          'background-color': 'red',
          display: 'inline-block',
          height: '10px',
          width: '10px',
          'margin-right': '5px',
          opacity: '0',
          transition: 'opacity .5s ease-in-out',
          delayed: {opacity: '1'},
          remove: {opacity: '0'},
        })
